@page
@model HotelReservationSystem.Pages.Pools.DetailsModel

@{
    ViewData["Title"] = "Pool Details";
}

<h2>Pool Details</h2>

@if (Model.Pool != null)
{
    <div class="pool-details">
        <img src="@Model.Pool.ImageURL" alt="Image of Pool" class="img-fluid" />
        <p>Status: @(Model.Pool.IsAvailable ? "Available" : "Not Available")</p>

        @if (!Model.Pool.IsAvailable && Model.Pool.FromDate.HasValue && Model.Pool.ToDate.HasValue)
        {
            <p>Reserved: @Model.Pool.FromDate.Value.ToString("dd/MM/yyyy") - @Model.Pool.ToDate.Value.ToString("dd/MM/yyyy")</p>
        }

        <div class="text-center mt-3">
            <a asp-page="/Pools/Reserve" asp-route-poolId="@Model.Pool.PoolId" class="btn btn-success">
                Reserve Pool
            </a>
        </div>
    </div>
}
else
{
    <p>Pool not found.</p>
}
