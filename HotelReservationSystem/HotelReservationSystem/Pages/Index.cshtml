@page
@model HotelReservationSystem.Pages.IndexModel

@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1>Hotel Reservation System</h1>
    </header>

    <main role="main" class="container">
        <div class="header-container">
            <h2>Available Rooms</h2>

            @if (!User.Identity.IsAuthenticated)
            {
                <div class="login-container">
                    <h4>For more information, please:</h4>
                    <a asp-page="/Account/Login" class="login-button">Login</a>
                </div>
            }
        </div>

        @if (Model.Rooms != null && Model.Rooms.Any())
        {
            <div class="room-list">
                @foreach (var room in Model.Rooms)
                {
                    <div class="room-item">
                        <h3>@room.RoomNumber</h3>

                        <img src="@room.ImageURL" alt="Image of @room.RoomNumber" class="room-image" />

                        <p>@room.Description</p>

                        <p class="room-price">Price: $@room.Price</p>

                        <p>Status: @(room.IsAvailable ? "Available" : "Not Available")</p>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No rooms available at the moment.</p>
        }
    </main>
</body>
</html>
