@page
@model HotelReservationSystem.Pages.Admin.CreateRoomModel
@{
    ViewData["Title"] = "Add New Room";
}

<h2>Add New Room</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Room.RoomNumber" class="control-label"></label>
        <input asp-for="Room.RoomNumber" class="form-control" />
        <span asp-validation-for="Room.RoomNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Room.RoomType" class="control-label"></label>
        <input asp-for="Room.RoomType" class="form-control" />
        <span asp-validation-for="Room.RoomType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Room.Price" class="control-label"></label>
        <input asp-for="Room.Price" class="form-control" />
        <span asp-validation-for="Room.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Room.IsAvailable" class="control-label"></label>
        <input asp-for="Room.IsAvailable" type="checkbox" />
        <span asp-validation-for="Room.IsAvailable" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Room.Description" class="control-label"></label>
        <textarea asp-for="Room.Description" class="form-control"></textarea>
        <span asp-validation-for="Room.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Room.ImageURL" class="control-label"></label>
        <input asp-for="Room.ImageURL" class="form-control" />
        <span asp-validation-for="Room.ImageURL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Room" class="btn btn-primary" />
    </div>
</form>

<a asp-page="./RoomsIndex" class="btn btn-secondary">Back to List</a>
