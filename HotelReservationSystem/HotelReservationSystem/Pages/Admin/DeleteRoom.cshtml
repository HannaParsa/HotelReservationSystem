@page "{id?}"
@model HotelReservationSystem.Pages.Admin.Rooms.DeleteModel
@{
    ViewData["Title"] = "Delete Room";
}

<h2>Delete Room</h2>

<h3>Are you sure you want to delete this room?</h3>
<div>
    <h4>@Model.Room.RoomNumber</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Room Type
        </dt>
        <dd class="col-sm-10">
            @Model.Room.RoomType
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Room.Price
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Room.RoomId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
