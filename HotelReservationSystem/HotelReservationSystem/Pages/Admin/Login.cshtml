@page
@model HotelReservationSystem.Pages.AdminLoginModel
@{
    ViewData["Title"] = "Admin Login";
}

<h1>Admin Login</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="LoginModel.Username"></label>
        <input asp-for="LoginModel.Username" class="form-control" />
        <span asp-validation-for="LoginModel.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LoginModel.Password"></label>
        <input asp-for="LoginModel.Password" type="password" class="form-control" />
        <span asp-validation-for="LoginModel.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
