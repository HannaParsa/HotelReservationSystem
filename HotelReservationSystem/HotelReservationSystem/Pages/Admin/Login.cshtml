@page
@model HotelReservationSystem.Pages.Admin.LoginModel
@{
    ViewData["Title"] = "Admin Login";
}

<h1>Admin Login</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Admin.Username"></label>
        <input asp-for="Admin.Username" class="form-control" />
        <span asp-validation-for="Admin.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Admin.Password"></label>
        <input asp-for="Admin.Password" type="password" class="form-control" />
        <span asp-validation-for="Admin.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
