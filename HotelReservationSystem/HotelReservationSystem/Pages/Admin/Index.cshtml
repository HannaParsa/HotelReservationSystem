@page
@model HotelReservationSystem.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Panel";
}

<h1>Admin Panel</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@user.UserId">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@user.UserId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
