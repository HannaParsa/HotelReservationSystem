@page 
@model HotelReservationSystem.Pages.Reservations.CreateModel
@{
    ViewData["Title"] = "Reserve Room";
}

<div class="container">
    <h2>Reserve Room @Model.Room.RoomNumber</h2>

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Room.ImageURL" alt="Image of @Model.Room.RoomNumber"  style="max-height: 150px; object-fit: cover;" />
        </div>
        <div class="col-md-8">
            <p>@Model.Room.Description</p>
            <p class="room-price"><strong>Price: $@Model.Room.Price</strong></p>
            <p>Status: <strong>@(Model.Room.IsAvailable ? "Available" : "Not Available")</strong></p>

            <form method="post" asp-page-handler="Reserve">
                <input type="hidden" name="roomId" value="@Model.Room.RoomId" />

                <div class="form-group">
                    <label for="fromDate">From Date:</label>
                    <input type="date" class="form-control" id="fromDate" name="FromDate" 
                           value="@(Model.FromDate.HasValue ? Model.FromDate.Value.ToString("yyyy-MM-dd") : string.Empty)" required />
                </div>
                
                <div class="form-group">
                    <label for="toDate">To Date:</label>
                    <input type="date" class="form-control" id="toDate" name="ToDate" 
                           value="@(Model.ToDate.HasValue ? Model.ToDate.Value.ToString("yyyy-MM-dd") : string.Empty)" required />
                </div>

                <button type="submit" class="btn btn-success">Reserve the Room</button>
            </form>
        </div>
    </div>
</div>
