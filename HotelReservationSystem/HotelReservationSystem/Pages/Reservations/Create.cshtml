@page
@model HotelReservationSystem.Pages.Reservations.CreateModel

@{
    ViewData["Title"] = "Create Reservation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <h1>Create Reservation</h1>
    </header>

    <main role="main" class="container">
        <h2>Reserve Room @Model.Room.RoomNumber</h2>

        <form method="post">
            <div class="form-group">
                <label for="userId">User ID:</label>
                <input type="text" id="userId" name="UserId" class="form-control" value="@Model.UserId" readonly />
            </div>
            <div class="form-group">
                <label for="totalAmount">Total Amount:</label>
                <input type="number" id="totalAmount" name="TotalAmount" class="form-control" value="@Model.Room.Price" readonly />
            </div>
            <div class="form-group">
                <input type="hidden" name="RoomId" value="@Model.Room.RoomId" />
                <button type="submit" class="btn btn-primary">Confirm Reservation</button>
            </div>
        </form>

        <a href="/Account/Index" class="btn btn-secondary">Back to Room List</a>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
