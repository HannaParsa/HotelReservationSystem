@page "{roomId:int}"
@model HotelReservationSystem.Pages.Reservations.ConfirmationModel
@{
    ViewData["Title"] = "Reservation Confirmation";
}

<div class="container">
    <h2>Reservation Successful!</h2>
    <p>Your reservation for Room @Model.Room.RoomNumber has been successfully confirmed.</p>
    <p>Thank you for booking with us!</p>
    <a href="/Account/Index" class="btn btn-primary">OK</a>
</div>
