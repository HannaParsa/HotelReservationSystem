@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form method="post">
    <div>
        <label>Username</label>
        <input asp-for="User.Username" />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="User.Password" type="password" />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="User.Email" />
    </div>
    <button type="submit">Register</button>
</form>
