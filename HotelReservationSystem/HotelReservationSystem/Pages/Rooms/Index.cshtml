@page
@model HotelReservationSystem.Pages.Rooms.IndexModel
@{
    ViewData["Title"] = "Room List";
}

<h2>Room List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Description</th>
            <th>Price</th>
            <th>Availability</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.Rooms)
        {
            <tr>
                <td>@room.RoomNumber</td>
                <td>@room.Description</td>
                <td>@room.Price</td>
                <td>@(room.IsAvailable ? "Available" : "Not Available")</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@room.RoomId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
